<div class="row">
    <div class="col-lg-9">
        <%= form_for @customer,:url => {controller: "admin/customers", action: "update"} do |f| %>
        <table class="edit_customer">
            <tr>
                <th>会員ID</th>
                <td><%= @customer.id %></td>
            </tr>
            <tr>
                <th class="line">氏名</th>
                <td>
                    <%= f.text_field :first_name %>
                    <%= f.text_field :last_name %>
                </td>
            </tr>
            <tr>
                <th>フリガナ</th>
                <td>
                    <%= f.text_field :kana_first_name %>
                    <%= f.text_field :kana_last_name %>
                </td>
            </tr>
            <tr>
                <th>郵便番号</th>
                <td><%= f.number_field :postcode %></td>
            </tr>
            <tr>
                <th>住所</th>
                <td><%= f.text_field :address %></td>
            </tr>
            <tr>
                <th>電話番号</th>
                <td><%= f.phone_field :phone_number %></td>
            </tr>
            <tr>
                <th>メールアドレス</th>
                <td><%= f.email_field :email %><td>
            </tr>
            <tr>
                <th>会員ステータス</th>
                <td>
                    <%= f.radio_button :is_valid, :true %>
                    <%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>
                    <%= f.radio_button :is_valid, :false %>
                    <%= f.label :is_valid, "退会済み", {value: :false, style: "display: inline-block;"} %>
                </td>
            </tr>
            <tr>
                <td><%= f.submit "登録内容を保存する", class: "btn btn-info" %></td>
            </tr>
        </table>
        <% end %>
    </div>
</div>
